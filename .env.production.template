# Web3AirdropOS Production Environment Template
# Copy this file to .env and fill in all values

# =============================================================================
# DATABASE
# =============================================================================
DB_USER=web3airdropos
DB_PASSWORD=CHANGE_ME_STRONG_PASSWORD_32_CHARS
DB_NAME=web3airdropos

# =============================================================================
# REDIS
# =============================================================================
REDIS_PASSWORD=CHANGE_ME_REDIS_PASSWORD_32_CHARS

# =============================================================================
# SECURITY
# =============================================================================
# JWT secret for access/refresh tokens (min 64 chars)
JWT_SECRET=CHANGE_ME_JWT_SECRET_64_CHARS_MINIMUM_VERY_SECURE_RANDOM_STRING_HERE

# Vault master key for encrypting secrets at rest (min 32 chars)
VAULT_MASTER_KEY=CHANGE_ME_VAULT_KEY_32_CHARS_MIN

# =============================================================================
# DOMAIN CONFIGURATION
# =============================================================================
# Your domain (used for API and frontend)
DOMAIN=yourdomain.com
API_URL=https://api.yourdomain.com
WS_URL=wss://api.yourdomain.com/ws
APP_URL=https://app.yourdomain.com

# =============================================================================
# BROWSER SERVICE
# =============================================================================
VNC_PASSWORD=CHANGE_ME_VNC_PASSWORD

# =============================================================================
# AI SERVICE (OpenAI)
# =============================================================================
OPENAI_API_KEY=sk-your-openai-api-key-here

# =============================================================================
# OPTIONAL: EXTERNAL SERVICES
# =============================================================================
# Ethereum RPC URL (for wallet operations)
ETH_RPC_URL=https://eth-mainnet.g.alchemy.com/v2/YOUR_API_KEY

# Base RPC URL
BASE_RPC_URL=https://base-mainnet.g.alchemy.com/v2/YOUR_API_KEY

# =============================================================================
# MONITORING (Optional)
# =============================================================================
# Sentry DSN for error tracking
SENTRY_DSN=

# DataDog API Key
DATADOG_API_KEY=
